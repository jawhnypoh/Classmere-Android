<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:textSize="15sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_meeting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_instructor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_enrollment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/tv_section_crn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="#000" />

</LinearLayout>